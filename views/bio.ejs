<div> 
    <% if (query.success==1) { %>
        <div class="alert alert-success" role="alert">
            Bio updated successfully
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% } %>
    <% if (query.error==1) { %>
        <div class="alert alert-danger" role="alert">
            Error occured on update
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% } %>
    <p>
        Your bio
    </p>
    <p>
        <%//console.log(my_bio)%>
        <form action="/bio/update" method="post">
            <div class="form-group row">
                <label for="job_title" class="col-sm-2 col-form-label"> Job: </label>
                <div class="col-sm-10">
                    <input type="text" value="<%= my_bio.Job%>" name="job_title" id="job_title" class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label for="description" class="col-sm-2 col-form-label"> Description: </label>
                <div class="col-sm-10">
                    <input type="text" value="<%= my_bio.Description%>" name="description" id="description" class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label for="quote" class="col-sm-2 col-form-label"> Quote: </label>
                <div class="col-sm-10">
                    <input type="text" value="<%= my_bio.Quote%>" name="quote" id="quote" class="form-control">
                </div>
            </div>
            <div>
                <input type="submit" class="btn btn-primary" value="Update Bio">
            </div>
        </form>
    </p>
    <hr>
    <p>
        Members of the FCS
    </p>
    <p>
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>
                        User
                    </th>
                    <th>
                        Job
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Quote
                    </th>
                </tr>
            </thead>
            <tbody>
            <% for (var i=0;i<bio_list.length;i++) { %>
                <% var bio = bio_list[i]; %>
                <tr>
                    <td>
                        <div class="container">
                            <div class="row">
                                <img src="<%=bio.user.avatar%>" class="avatar-bio">
                            </div>
                            <div class="row">
                                <span class="text-center width-100"><%= bio.user.username %></span>
                            </div>
                        </div>
                    </td>
                    <td>
                        <%= bio.Job %>
                    </td>
                    <td>
                        <%= bio.Description %>
                    </td>
                    <td>
                        <%= bio.Quote %>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </p>
</div>